{
    "manifest_version": 3,
    "name": "Ukrainian Voice Input for ChatGPT",
    "version": "1.0",
    "description": "Adds Ukrainian voice input for ChatGPT using Web Speech API",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["https://chat.openai.com/*"],
    "content_scripts": [
        {
            "matches": ["https://chat.openai.com/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
}