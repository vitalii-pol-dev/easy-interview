{
    "manifest_version": 3,
    "name": "Easy Interview - Voice Input",
    "version": "1.0.0",
    "description": "Adds voice input functionality to ChatGPT with support for Ukrainian, Russian, and English languages",
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*",
                "https://chatgpt.com/*"
            ],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
}